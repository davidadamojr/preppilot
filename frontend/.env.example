# PrepPilot Frontend Environment Variables
# Copy this file to .env.local and update the values

# API URL - Required in production, defaults to localhost:8000 in development
NEXT_PUBLIC_API_URL=http://localhost:8000

# App Mode - Switch between "pretotype" (landing page) and "live" (full app)
NEXT_PUBLIC_APP_MODE=live

# App URL - Used for metadata (OG images, etc.)
NEXT_PUBLIC_APP_URL=https://preppilot.com

# Google Analytics - Optional, for tracking CTAs
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Formspree - Required for pretotype mode email capture (server-side only)
FORMSPREE_FORM_ID=
